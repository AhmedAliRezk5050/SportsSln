    <title>SportsStore</title>
    <link rel="stylesheet" href="~/css/bootstrap.custom.min.css">
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/app.css">
</head>

<body>
